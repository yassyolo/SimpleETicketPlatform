@model SimpleETicketPlatform.Core.Models.Movies.MovieFormViewModel
@{
    ViewData["Title"] = "Edit Movie Here:";
}
<div class="add-movie-container">
    <h2 class="page-title">@ViewData["Title"]</h2>
    <form class="post-form" asp-action="Edit" asp-controller="Movies" method="post">
        <div class="form-section">
            <div class="form-member">
                <label asp-for="Name">Name</label>
                <input asp-for="Name" class="form-control" placeholder="Name..." />
                <span asp-validation-for="Name" class="validation"></span>
            </div>
            <div class="form-member">
                <label asp-for="PhotoURL">Photo URL</label>
                <input asp-for="PhotoURL" class="form-control" placeholder="URL..." />
                <span asp-validation-for="PhotoURL" class="validation"></span>
            </div>
            <div class="form-member">
                <label asp-for="Price">Price</label>
                <input asp-for="Price" class="form-control" placeholder="Price..." />
                <span asp-validation-for="Price" class="validation"></span>
            </div>
            <div class="form-member">
                <label asp-for="StartDate">Start Date</label>
                <input asp-for="StartDate" class="form-control" placeholder="Start Date..." />
                <span asp-validation-for="StartDate" class="validation"></span>
            </div>
            <div class="form-member">
                <label asp-for="EndDate">End Date</label>
                <input asp-for="EndDate" class="form-control" placeholder="End Date..." />
                <span asp-validation-for="EndDate" class="validation"></span>
            </div>
        </div>

        <div class="form-section">
            <div class="form-member">
                <label asp-for="CinemaId">Cinema</label>
                <select asp-for="CinemaId" class="form-control" asp-items="ViewBag.CinemaId"></select>
                <span asp-validation-for="CinemaId" class="validation"></span>
            </div>
            <div class="form-member">
                <label asp-for="MovieCategoryId">Category</label>
                <select asp-for="MovieCategoryId" class="form-control" asp-items="ViewBag.MovieCategoryId"></select>
                <span asp-validation-for="MovieCategoryId" class="validation"></span>
            </div>
            <div class="form-member">
                <label asp-for="ProducerId">Producer</label>
                <select asp-for="ProducerId" class="form-control" asp-items="ViewBag.ProducerId"></select>
                <span asp-validation-for="ProducerId" class="validation"></span>
            </div>
            <div class="form-member">
                <label asp-for="ActorIds">Actors</label>
                <select asp-for="ActorIds" class="form-control" asp-items="ViewBag.ActorId" multiple></select>
                <span asp-validation-for="ActorIds" class="validation"></span>
            </div>
        </div>

        <div class="form-section">
            <div class="form-member">
                <label asp-for="Description">Description</label>
                <textarea asp-for="Description" class="form-control" placeholder="Description..." rows="4"></textarea>
                <span asp-validation-for="Description" class="validation"></span>
            </div>
        </div>

        <div class="form-member text-center">
            <img id="PhotoPreview" class="photo-preview" />
        </div>

        <div class="action-buttons">
            <a asp-action="Index" asp-controller="Movies" method="get">
                <button type="submit" class="btn-add">See All</button>
            </a>
            <button type="submit" class="btn-add">Submit</button>
        </div>
    </form>
</div>

<style>
    .add-movie-container {
        max-width: 900px;
        margin: 20px auto;
        padding: 20px;
        background-color: #ffffff;
        border: 2px solid darkred;
        border-radius: 6px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .page-title {
        color: darkred;
        text-align: center;
        margin-bottom: 20px;
    }

    .post-form {
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    .form-section {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
    }

    .form-member {
        flex: 1;
        min-width: 250px;
        display: flex;
        flex-direction: column;
    }

    .form-member label {
        font-weight: bold;
        margin-bottom: 5px;
    }

    .form-member input,
    .form-member select,
    .form-member textarea {
        width: 100%;
        padding: 8px;
        border: 1px solid darkred;
        border-radius: 4px;
        box-sizing: border-box;
    }

    .form-member textarea {
        resize: vertical;
    }

    .validation {
        color: red;
        font-size: 0.9rem;
        margin-top: 5px;
    }

    .btn-add {
        background-color: darkred;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 4px;
        cursor: pointer;
        transition: background-color 0.3s ease;
        margin-right: 20px;
    }

    .btn-add:hover {
        background-color: crimson;
    }

    .btn-secondary {
        background-color: #888;
        margin-right: 10px;
    }

    .btn-secondary:hover {
        background-color: #666;
    }

    .photo-preview {
        max-width: 300px;
        height: auto;
        margin-top: 10px;
        border: 1px solid #ddd;
        border-radius: 4px;
    }

    .action-buttons {
        display: flex;
        justify-content: center;
        gap: 10px;
        margin-top: 20px;
    }
</style>

@section Scripts {
    <script>
        $(document).ready(function () {
            function updatePreview(url) {
                $("#PhotoPreview").attr("src", url);
            }

            updatePreview($("#PhotoURL").val());

            $("#PhotoURL").on("input", function () {
                var url = $(this).val();
                updatePreview(url);
            });

        });
    </script>
    <partial name="_ValidationScriptsPartial" />
}
