@model SimpleETicketPlatform.Core.Models.Producers.ProducerFormViewModel
@{
    ViewData["Title"] = "Edit producer here:";
}

<div class="edit-producer-container">
    <h2>@ViewData["Title"]</h2>
    <form class="post-form" method="post" asp-action="Edit" asp-controller="Producers">
        <div class="form-member text-center">
            <img id="ProfilePicturePreview" src="@Model.ProfilePictureURL" />
        </div>
        <div class="form-member">
            <label asp-for="ProfilePictureURL">Profile Picture URL</label>
            <input asp-for="ProfilePictureURL" class="form-control" placeholder="URL..." />
            <span asp-validation-for="ProfilePictureURL" class="validation"></span>
        </div>
        <div class="form-member">
            <label asp-for="FullName">Full Name</label>
            <input asp-for="FullName" class="form-control" placeholder="Full Name..." />
            <span asp-validation-for="FullName" class="validation"></span>
        </div>
        <div class="form-member">
            <label asp-for="Biography">Biography</label>
            <input asp-for="Biography" class="form-control" placeholder="Biography..." />
            <span asp-validation-for="Biography" class="validation"></span>
        </div>
        <div class="action-buttons">
            <a asp-action="Index" asp-controller="Producers" method="get" class="btn">See All</a>
            <button type="submit" class="btn">Submit</button>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            function updatePreview(url) {
                $("#ProfilePicturePreview").attr("src", url);
            }

            updatePreview($("#ProfilePictureURL").val());

            $("#ProfilePictureURL").on("input", function () {
                var url = $(this).val();
                updatePreview(url);
            });
        });
    </script>
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .edit-producer-container {
        width: 700px;
        background-color: white;
        margin: auto;
        border: 2px solid darkred;
        border-radius: 5px;
        display: flex;
        flex-direction: column;
        padding: 10px;
        margin-top: 3px;
    }

    h2 {
        color: darkred;
        text-align: center;
        margin-top: 10px;
    }

    .post-form {
        display: flex;
        flex-direction: column;
        padding: 10px;
        height: 80%;
    }

    .form-member {
        margin-bottom: 20px;
    }

        .form-member label {
            font-weight: bold;
        }

        .form-member input {
            align-content: center;
            justify-content: center;
            width: 95%;
            height: 30px;
            border: 1px solid darkred;
            border-radius: 3px;
        }

    input.form-control[name="Biography"] {
        height: 90px;
    }

    .validation {
        color: red;
    }

    .btn {
        background-color: darkred;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 4px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .btn:hover {
            background-color: #e91e63;
        }

    .action-buttons {
        display: flex;
        gap: 440px;
    }

    #ProfilePicturePreview {
        max-width: 300px;
        height: auto;
        margin-top: 10px;
    }
</style>
