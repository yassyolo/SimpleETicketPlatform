@model SimpleETicketPlatform.Core.Models.Producers.ProducerIndexViewModel

<div class="delete-container">
    <h4>Are you sure you want to delete producer with:</h4>
    <h3><b>Name:</b> @Model.FullName</h3>
    <h3><b>Id:</b> @Model.Id</h3>
    <div class="action-buttons">
        <form asp-action="Index" asp-controller="Producers" method="get">
            <button type="submit" class="btn-return">Return</button>
        </form>
        <form asp-action="DeleteConfirmed" asp-controller="Producers" asp-route-id="@Model.Id" method="post">
            <button type="submit" class="btn">Submit</button>
        </form>
    </div>
</div>

<style>
    .delete-container {
        height: 300px;
        border: 12px solid darkred;
        border-radius: 5px;
        margin-top: 15px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 20px;
    }

        .delete-container h4, .delete-container h3 {
            margin: 10px 0;
        }

    .btn {
        background-color: darkred;
        color: white;
        border: none;
        padding: 7px 14px;
        border-radius: 4px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    .btn-return {
        background-color: lawngreen;
        color: white;
        border: none;
        padding: 7px 14px;
        border-radius: 4px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .btn-return:hover {
            background-color: greenyellow;
        }

    .btn:hover {
        background-color: lightcoral;
    }

    .action-buttons {
        display: flex;
        gap: 50px;
        margin-top: 20px;
        margin-bottom: 20px;
        width: 40%;
        justify-content: center;
    }
</style>
