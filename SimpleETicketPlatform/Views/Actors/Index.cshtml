@model SimpleETicketPlatform.Core.Models.Actors.FilteredActorsViewModel
@{
    ViewData["Title"] = "Check out the actors in our platform!";
}
<div class="all-actors-container">
    <h3 class="title">@ViewBag.Title</h3>
    <div class="table-info">
        <div class="search-engine">
            <form class="form-search-engine" asp-controller="Actors" asp-action="Index" method="get">
                <div class="search-term">
                    <label asp-for="SearchTerm" class="bold-label">Search Actors</label>
                    <input asp-for="SearchTerm" class="form-control" placeholder="Movie...">
                </div>
                <div class="submit">
                    <button type="submit" class="btn-search">Search</button>
                </div>
            </form>
        </div>
    </div>
    @if (Model.Actors.Any())
    {
        <div class="all-actors">
            @foreach (var actor in Model.Actors)
            {
                <div class="actor-row">
                    <div class="image">
                        <img src="@actor.ProfilePictureURL" />
                    </div>
                    <div class="actor-info">
                        <h4><b>@actor.FullName</b></h4>
                        @if (!string.IsNullOrEmpty(actor.Biography) && actor.Biography.Length > 100)
                        {
                            <p class="biography">@actor.Biography.Substring(0, 100)... <a asp-controller="Actors" asp-action="Details" asp-route-id="@actor.Id" method="get">Read more</a></p>
                        }
                        else
                        {
                            <p class="biography">@actor.Biography</p>
                        }
                        <div class="btns">
                            <form asp-controller="Actors" asp-action="Edit" asp-route-id="@actor.Id" method="get">
                                <button type="submit" class="btn">Edit</button>
                            </form>
                            <form asp-controller="Actors" asp-action="Details" asp-route-id="@actor.Id" method="get">
                                <button type="submit" class="btn">Details</button>
                            </form>
                            <form asp-controller="Actors" asp-action="Delete" asp-route-id="@actor.Id" method="get">
                                <button type="submit" class="btn">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <h5>@Model.ActorsMatched actors matched your search!</h5>
    }

    @await Html.PartialAsync("_AddPartial", "Actors")
</div>

<style>
    .title {
        margin-top: 10px;
        padding-bottom: 10px;
        font-size: 35px;
        text-align: center;
        color: darkred;
        border-bottom: 2px solid darkred;
    }

    .table-info {
        display: flex;
        justify-content: space-between;
        padding: 10px 30px;
        color: darkred;
        border-top: 1px solid darkred;
        border-bottom: 1px solid darkred;
        background-color: #f5f5f5;
    }

    .search-engine {
        display: flex;
        align-items: center;
    }

    .form-search-engine {
        display: flex;
    }

    .search-term {
        margin-right: 10px;
        max-width: 200px;
    }

    .submit {
        flex-shrink: 0;
    }

    .all-actors-container {
        max-width: 1100px;
        background-color: white;
        border: 2px solid darkred;
        border-radius: 7px;
        margin: 20px auto;
        padding: 20px;
    }

    .actor-row {
        display: flex;
        align-items: center;
        padding: 20px 30px;
        border-bottom: 1px solid darkred;
        transition: background-color 0.3s;
    }

    .actor-row:hover {  
        background-color: #f5f5f5;
    }

    .image img {
        height: 170px;
        width: 145px;
        border: 1px solid darkred;
        border-radius: 3px;
        padding: 5px;
        margin-right: 20px;
    }

    .actor-info {
        display: flex;
        flex-direction: column;
        flex-grow: 1;
    }

    .actor-info h4 {
        margin: 0;
        font-size: 1.5rem;
        color: darkred;
    }

    .biography {
        margin: 10px 0;
        font-size: 1rem;
        max-width: 600px;
    }

    .biography a {
        color: darkred;
        text-decoration: none;
    }

    .biography a:hover {
        text-decoration: underline;
    }

    .btns {
        display: flex;
        gap: 10px;
        margin-top: 10px;
    }

    .btn {
        background-color: darkred;
        color: white;
        border: none;
        padding: 5px 10px;
        border-radius: 4px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .btn:hover {
            background-color: crimson;
        }

    .btn-search {
        margin-top: 25px;
        background-color: darkred;
        color: white;
        border: none;
        padding: 6px 11px;
        border-radius: 4px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

</style>